				"source": [
					"%md\n",
					"#### Read Data from Azure DataLake Storage"
				]
			},
			{
				"cell_type": "code",
				"metadata": {
					"collapsed": false
				},
				"source": [
					"df_bronze = spark.read.parquet(\"abfss://retail@pocazuresynapsestorage.dfs.core.windows.net/bronze/\")\n",
					"\n",
					"df_silver = \\\n",
					"(\\\n",
					"    df_bronze\\\n",
					"    .filter(col(\"event_type\") == \"purchase\")\\\n",
					"    .dropna(subset=[\"customer_id\", \"amount\"])\\\n",
					"    .withColumn(\"event_date\", to_date(col(\"event_timestamp\")))\\\n",
					"    .withColumn(\"payment_method\", lower(col(\"payment_method\")))\\\n",
					"    .withColumn(\"amount\", col(\"amount\").cast(\"float\"))\\\n",
					"    # .select(\\\n",
					"    #     \"event_id\", \"customer_id\", \"event_date\", \"product_id\",\\\n",
					"    #     \"product_category\", \"payment_methid\", \"amount\", \"location\", \"status\"\\\n",
					"    # )\\\n",
					")"
				],
				"execution_count": 53
			},
			{
				"cell_type": "markdown",
				"metadata": {
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
